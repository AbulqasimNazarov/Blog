@model BlogApp.Core.Dtos.Models.RegistrationDto

@{
    ViewData["Title"] = "Sign Up";
}

<div class="container">
    <div class="identity-wrapper">
        <div class="left-panel">
            <img src="../../Assets/IMG/LogoImg.png" alt="Logo" />
            <div class="identity-wrap">
                <h2>Create Account!</h2>
                <form asp-route="RegistrationEndpoint" method="post">
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" placeholder="Enter your email" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" placeholder="Enter your name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <button class="submit-btn" type="submit">Create Account</button>
                </form>
                <div class="social-identity">
                    <button class="google">Sign up with Google</button>
                    <button class="facebook">Sign up with Facebook</button>
                    <button class="apple">Sign up with Apple</button>
                </div>
                <div class="policy">
                    <span>
                        By signing up,you agree to our Teams of Service and acknowledge that our Privacy Policy applies to you.
                    </span>
                </div>
            </div>
        </div>
        <div class="right-panel">
            <div class="offer registr-offer">
                <h1>What's<br>on<br>my<br>mind<br>today?</h1>
            </div>
            <img class="registr-img" src="../../Assets/IMG/identityItem_2.png" alt="" />
            <div class="Copyright">
                <div>Copyright Â© 2023</div>
            </div>
        </div>
    </div>
</div>
