@model BlogApp.Core.Dtos.LoginDto

@{
    ViewData["Title"] = "Sign In";
}

<div class="container">
    <div class="identity-wrapper">
        <div class="left-panel">
            <img src="../../Assets/IMG/LogoImg.png" alt="Logo" />
            <div class="identity-wrap">
                <h2>Sign In</h2>
                <form asp-route="LoginEndPoint" method="post">
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" placeholder="Enter your email" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" placeholder="Enter your name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <button class="submit-btn" type="submit">Sign In</button>
                </form>
                <div class="social-identity">
                    <button class="google">Sign in with Google</button>
                    <button class="facebook">Sign in with Facebook</button>
                    <button class="apple">Sign in with Apple</button>
                </div>
            </div>
        </div>
        <div class="right-panel">
            <div class="offer">
                <h1>Welcome to BLOG!</h1>
                <p>“is a frequently updated web page used for personal commentary or business content.”</p>
                <a class="btn" href="/identity/Registration">Get Started</a>
            </div>
            <img src="../../Assets/IMG/identityItem_1.png" alt="" />
            <div class="Copyright">
                <div>Copyright © 2023</div>
            </div>
        </div>
    </div>
</div>